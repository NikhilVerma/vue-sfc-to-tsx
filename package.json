{
  "name": "vue-to-tsx",
  "version": "0.3.1",
  "description": "Convert Vue Single File Components (.vue) to Vue TSX (.tsx + .module.css)",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "bin": {
    "vue-to-tsx": "dist/cli.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "build": "bun build src/index.ts src/cli.ts --outdir dist --target bun --external @vue/compiler-sfc --external @vue/compiler-dom --external @vue/compiler-core --external ai --external @ai-sdk/anthropic --external @ai-sdk/openai --external magic-string",
    "prepublishOnly": "bun run lint && bun run typecheck && bun test && bun run build",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "lint:type-aware": "oxlint --type-aware --type-check src/",
    "typecheck": "tsgo --noEmit",
    "fmt": "oxfmt --write src/ test/",
    "fmt:check": "oxfmt --check src/ test/",
    "check": "bun run lint && bun run fmt:check && bun run typecheck",
    "playground": "bun run src/playground/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NikhilVerma/vue-sfc-to-tsx.git"
  },
  "keywords": [
    "vue",
    "tsx",
    "converter",
    "sfc",
    "jsx",
    "css-modules"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.5",
    "@vue/compiler-dom": "^3.5",
    "@vue/compiler-core": "^3.5",
    "ai": "^4",
    "@ai-sdk/anthropic": "^1",
    "@ai-sdk/openai": "^1",
    "magic-string": "^0.30"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260210.1",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "oxlint-tsgolint": "^0.12.0",
    "typescript": "^5.5"
  }
}
